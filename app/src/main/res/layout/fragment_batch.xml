<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutbatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultMainColor"
    tools:context=".fragment.batch.BatchFragment">

    <TextView
        android:id="@+id/list_batch"
        android:layout_width="420dp"
        android:layout_height="57dp"
        android:background="#03A9F4"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="List batch"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewbatch"
        android:layout_width="394dp"
        android:layout_height="620dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/get_my_list_batch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <TextView
        android:id="@+id/scan_batch"
        android:layout_width="420dp"
        android:layout_height="57dp"
        android:background="#FF5722"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="@string/start_text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <TextView
        android:id="@+id/get_my_list_batch"
        android:layout_width="420dp"
        android:layout_height="57dp"
        android:background="#03A9F4"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="Get List Batch Picking"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>